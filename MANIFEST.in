include README.md
include LICENSE
include pyproject.toml
include setup.py
include .gitmodules

# Include Python package files
recursive-include iowarp_core *.py
recursive-include iowarp_core/lib *.so *.so.* *.a *.dylib
recursive-include iowarp_core/include *.h *.hpp *.hxx
recursive-include iowarp_core/bin *

# Include C++ source code from submodule
graft iowarp-core-src
prune iowarp-core-src/.git
prune iowarp-core-src/build
prune iowarp-core-src/external/Catch2/.git
prune iowarp-core-src/external/cereal/.git
prune iowarp-core-src/external/nanobind/.git
prune iowarp-core-src/external/yaml-cpp/.git
prune iowarp-core-src/external/nanobind/ext/robin_map/.git

global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
