include README.md
include LICENSE
include pyproject.toml
include setup.py
include CMakeLists.txt
include CMakePresets.json
include CLAUDE.md

# Include Python package files
recursive-include iowarp_core *.py
recursive-include iowarp_core/lib *.so *.so.* *.a *.dylib
recursive-include iowarp_core/include *.h *.hpp *.hxx
recursive-include iowarp_core/bin *

# Include C++ source code directories (direct copy)
graft context-runtime
graft context-transfer-engine
graft context-assimilation-engine
graft context-transport-primitives
graft context-exploration-engine
graft external

# Exclude build artifacts and git directories
prune build
prune docker
prune ai-prompts
prune context-runtime/ai-prompts
prune context-transfer-engine/ai-prompts
prune context-assimilation-engine/ai-prompts
prune context-transport-primitives/ai-prompts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude .vscode*
global-exclude .idea*
global-exclude .devcontainer*
global-exclude *.o
